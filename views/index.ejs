<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
	<link rel='stylesheet' href='\css\bootstrap.min.css'/>
  <link rel='stylesheet' href='\css\signin.css' />
  </head> 
  <body>  


 <div class="navbar navbar-default navbar-fixed-top navbar-home">
      <div class="container">
        <div class="navbar-header">

          <a class="navbar-brand" href="#"><span class="home-icon"></span>Project Management</a>
      
        </div>  
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right ">
            <li class="active"><a href="#">About</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Contact Us</a></li>
           
            
          </ul>
        </div>
      </div>
    </div>


<header class="panel-default bg-panel">
    <div class="container">
        <span class="bg-header">

        <H1>WE GROW BY HELPING OTHERS</H1>
      <H2>JOIN HANDS BY SIGNING IN</H2>

      </span>
      

       <button class="btn btn-primary btn-lg   " type="submit" data-toggle="modal" data-target="#login">Log In</button>
                        
    <button class="btn btn-default btn-lg  " type="submit" data-toggle="modal" data-target="#signup">Sign Up</button>

    </div>
</header>


<!--SignIn -->
 <div class="modal fade" id="login" role="dialog">
    <div class="modal-dialog">
   
      <form class="form-signin" action="/signin" method="post">
      <h2 class="form-signin-heading"> Log In</h2>

        <label for="email" class="form-label">Email address</label>
        <input type="email" id="email" class="form-control" placeholder="Email address" name="email" required autofocus>
   
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" class="form-control" placeholder="password" name="password" required>

        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        
        <button class="form-btn btn-lg btn-primary" type="submit">Log In</button>
       
      </form>
    </div>

    </div>

    <!--Sign Up-->
     <div class="modal fade" id="signup" role="dialog">
    <div class="modal-dialog">
      <form class="form-signin" action="/register" method="post">
      <h2 class="form-signin-heading"> Sign Up</h2>
        <label for="email" class="form-label">Your Email address</label>
        <input type="email" id="email" class="form-control" placeholder="Email address" name="email" required autofocus>

        <label for="username" class="form-label">Choose a UserName</label>
        <input id="username" class="form-control" placeholder="User Name" name="username" required>

        <label for="password" class="form-label">Choose a password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="password" required>

        <label for="confirmPassword" class="form-label">Confirm password</label>
        <input type="password" id="confirmPassword" class="form-control" placeholder="Password" name="confirmPassword" required>

        <button class="form-btn btn-lg btn-primary" type="submit">Register</button>
        
      </form>
    </div>
 </div>


   <footer class="footer">
        

        <div class="container">
    <div class="row">
           
    <p> PayPal &copy; Powered By Marina</p>
  </div>

      </footer>



  </body>
</html>



