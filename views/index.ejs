<header class="panel-default bg-panel">
    <div class="container">
        <span class="bg-header">

        <H1>WE GROW BY HELPING OTHERS GROW</H1>
      <H2>JOIN HANDS BY SIGNING IN</H2>

      </span>
      

       <button class="btn btn-primary btn-lg" id="login_btn" type="submit" data-toggle="modal" data-target="#login">Log In</button>
                        
    <button class="btn btn-default btn-lg" id="signup_btn" type="submit" data-toggle="modal" data-target="#signup">Sign Up</button>

    </div>
</header>


<!--SignIn -->
 <div class="modal fade" id="login" role="dialog">
    <div class="modal-dialog">
   
      <form class="form-signin" action="/signin" method="post">
      <h2 class="form-signin-heading"> Log In</h2>

        <label for="email" class="form-label">Email address</label>
        <input type="email" id="email" class="form-control" placeholder="Email address" name="email" required autofocus>
   
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" class="form-control" placeholder="password" name="password" required>

        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        
        <button  class="form-btn btn-lg btn-primary" id="login_btn" type="submit">Log In</button>
       
      </form>
    </div>

    </div>

    <!--Sign Up-->
     <div class="modal fade" id="signup" role="dialog">
    <div class="modal-dialog">
      <form class="form-signin" action="/register" method="post" >
      <h2 class="form-signin-heading"> Sign Up</h2>
        <label for="email" class="form-label">Your Email address</label>
        <input type="email" id="email" class="form-control" placeholder="Email address" name="email" required autofocus>

        <label for="username" class="form-label">Choose a UserName</label>
        <input id="username" class="form-control" placeholder="User Name" name="username" required>

        <label for="password" class="form-label">Choose a password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="password" required>

        <label for="confirmPassword" class="form-label">Confirm password</label>
        <input type="password" id="confirmPassword" class="form-control" placeholder="Password" name="confirmPassword" required>

        <button class="form-btn btn-lg btn-primary" id="signup_btn" type="submit">Register</button>
        
      </form>
    </div>
 </div>

