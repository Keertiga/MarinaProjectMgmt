     $(document).ready(function(){

  
   //To load the record of the User
      $('#viewprofile').load('/profile/view');
      $.ajax({
        url:"../profile/data",
        type:"GET",
        data:"userid=vara",
        headers:{"Accept":"application/json;odata=verbose"},
        success:function(data){

              for(var i in data){
                $('#userid').text(data[i].userid);
                $('#fname').text(data[i].fname);
                $('#lname').text(data[i].lname);
                $('#gender').text(data[i].gender);
                $('#DOB').text(data[i].DOB);
                $('#mobile').text(data[i].mobile);                                  
                $('#email').text(data[i].email);
                $('#city').text(data[i].city);
                $('#state').text(data[i].state);
                $('#role').text(data[i].role);
                $('#country').text(data[i].country);

                $('#fullname').text(data[i].fname +" "+data[i].lname);

              }
        },
        error:function(data){
          alert("error");
        }
       });
 //To load the record of the User -- end
               


// on click of edit profile
 $("#profileedit").on('click',function(e){

  $('#profileli').addClass('disabled');

    var userid = $('#userid').text();
    var lname = $('#lname').text();
    var fname = $('#fname').text();
    var gender = $('#gender').text();
    
    var mobile = $('#mobile').text();
    var email = $('#email').text();
    var city = $('#city').text();
    var state = $('#state').text();
    var role = $('#role').text();
    var country =$('#country').text();

    var DOB = $('#DOB').text();
    var dobdate = DOB.split('T');


    $('#viewprofile').load('/profile/edit',function(){

           

           $('#userid').val(userid);
           $('#lname').val(lname);
           $('#fname').val(fname);
           $('#gender').val(gender);
           $('#DOB').val(dobdate[0]);
           $('#mobile').val(mobile);
           $('#email').val(email);
           $('#city').val(city);
           $('#state').val(state);
           $('#role').val(role);
           $('#country').val(country);
            
        });
      });





});
